# Authentication (at least one of JWT_SECRET or API_KEYS must be set)
JWT_SECRET=
API_KEYS=

# Anthropic API key for Claude Agent SDK
ANTHROPIC_API_KEY=

# Allowed usernames for registration (comma-separated, empty = disabled)
ALLOWED_USERNAMES=

# Database driver: sqlite | postgres | mysql | mongodb
DB_DRIVER=sqlite

# SQLite (only when DB_DRIVER=sqlite)
SQLITE_PATH=./data/claude-chat.db

# PostgreSQL (only when DB_DRIVER=postgres)
POSTGRES_URL=postgresql://localhost:5432/claude_chat

# MySQL (only when DB_DRIVER=mysql)
MYSQL_URL=mysql://localhost:3306/claude_chat

# MongoDB (only when DB_DRIVER=mongodb)
MONGODB_URL=mongodb://localhost:27017/claude_chat

# Server
PORT=3000
HOST=127.0.0.1

# CORS origins (comma-separated, defaults to http://localhost:5173)
CORS_ORIGINS=http://localhost:5173
